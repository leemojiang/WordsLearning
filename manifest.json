{
    "manifest_version": 3,
    "name": "Request Parameter Logger",
    "version": "1.1",
    "permissions": [
      "webRequest",
      "contextMenus",
      "clipboardWrite",
      "storage"
    ],
    "background": {
      "service_worker": "./scripts/background.js"
    },
    "host_permissions": [
      "https://fanyi.baidu.com/*",
      "<all_urls>"
    ],
    "content_scripts": [ 
        { "matches": ["https://fanyi.baidu.com/*"], 
        "js": ["./scripts/contentV2.js"] 
        } ,
        {
          "matches":["<all_urls>"],
          "js":["./scripts/copy.js"]
        }
    ],
    "action":{"default_popup":"./popup/popup.html"}
  }
  